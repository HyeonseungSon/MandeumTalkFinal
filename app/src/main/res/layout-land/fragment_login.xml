        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <EditText
                android:id="@+id/emailArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="email"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/mainPink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainPink" />

            <EditText
                android:id="@+id/passwordArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:textColor="@color/mainSkyBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainPink" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

            <Button
                android:layout_marginRight="20dp"
                android:id="@+id/loginBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainskyblue"
                android:text="로그인"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:layout_marginRight="20dp"
                android:id="@+id/noAcouuntBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainpink"
                android:text="비회원 로그인"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/joinBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainskyblue"
                android:text="회원가입"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

