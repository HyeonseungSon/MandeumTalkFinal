<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/emailArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="email"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/mainPink" />

            <LinearLayout
                android:background="@color/mainPink"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:background="@null"
                android:layout_marginTop="20dp"
                android:textColor="@color/mainSkyBlue"
                android:id="@+id/passwordArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:inputType="textWebPassword" />

            <LinearLayout
                android:background="@color/mainPink"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12">
            <Button
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainskyblue"
                android:text="로그인"
                android:textAllCaps="false"/>
            <Button
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:id="@+id/noAcouuntBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainpink"
                android:text="비회원 로그인"
                android:textAllCaps="false"/>
            <Button
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:id="@+id/joinBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainskyblue"
                android:text="회원가입"
                android:textAllCaps="false"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>